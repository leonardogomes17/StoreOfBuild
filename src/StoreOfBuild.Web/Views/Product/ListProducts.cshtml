@model IEnumerable<StoreOfBuild.Domain.Dtos.ProductDto>
@{
    ViewData["Title"] = "List Products";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Products List</h3>
        <a href="/Product/CreateOrEdit" class="btn btn-primary">New</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            @foreach(var dto in @Model){
                <tr>
                    <td> 
                        <a class="name">@dto.Name</a>
                    </td>
                    <td>                    
                        <a href="/Product/CreateOrEdit/@dto.Id" class="name">Edit</a>
                    </td>
                    <td>                    
                        <a href="/Product/Delete/@dto.Id" class="name">Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>